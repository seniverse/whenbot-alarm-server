{
  "compilerOptions": {
    "declaration": false,
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "lib": ["es2015", "es2015.promise", "es2016", "dom"],
    "noImplicitAny": false,
    "outDir": "dist",
    "baseUrl": "./",
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "suppressImplicitAnyIndexErrors": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "removeComments": true
  },
  "include": ["src/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "dist"]
}
